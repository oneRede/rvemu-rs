    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rvemu-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rvemu-rs",
                    "--package=rvemu-rs"
                ],
                "filter": {
                    "name": "rvemu-rs",
                    "kind": "bin"
                }
            },
            "args": ["/code/rvemu-rs/test/a.out"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rvemu-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rvemu-rs",
                    "--package=rvemu-rs"
                ],
                "filter": {
                    "name": "rvemu-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}